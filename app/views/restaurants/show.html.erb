  <div>
    <button class="btn btn-outline-primary">
      <%= link_to 'Home', root_path %>
    </button>
  </div>
  <div>
    <button class="btn btn-outline-primary">
      <%= link_to 'New Restaurant', new_restaurant_path %>
    </button>
  </div>
</nav>

<div class="container mt-5">
<%= render @restaurant %>
</div>

<div class="d-flex justify-content-start p-3">
  <div>
    <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant), class: "btn btn-outline-primary mt-1" %>
  </div>

  <div >
    <%= button_to "Destroy this restaurant" , @restaurant, method: :delete, class: "btn btn-outline-primary mt-1" %>
 </div>
</div>

 <div>
  <h6>Reviews</h6>
  <%= link_to 'Add a review', new_restaurant_review_path(@restaurant), class: "btn btn-outline-primary mt-1" %>
  <ul>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.content %></li>
      <%= link_to 'delete', review_path(review), data: { turbo_method: :delete, turbo_confirm: 'are you sure?'} %>
    <% end %>
  </ul>
</div>


<div>
   <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-outline-primary mt-5" %>
</div>
